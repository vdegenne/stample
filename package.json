{
	"name": "stample",
	"version": "1.0.3",
	"description": "Mini tree mirroring tool with placeholders replacement capabilities.",
	"type": "module",
	"main": "./lib/index.js",
	"module": "./lib/index.js",
	"types": "./lib/index.d.ts",
	"exports": {
		".": {
			"import": "./lib/index.js",
			"default": "./lib/index.js",
			"types": "./lib/index.d.ts"
		}
	},
	"scripts": {
		"build": "wireit",
		"test": "wireit"
	},
	"wireit": {
		"build": {
			"dependencies": [
				"build:ts"
			]
		},
		"build:ts": {
			"command": "tsc --pretty",
			"clean": "if-file-deleted",
			"files": [
				"tsconfig.json",
				"src"
			],
			"output": [
				"lib"
			]
		},
		"test": {
			"command": "mocha lib/test/**/*_test.js",
			"files": [
				"fixtures"
			],
			"dependencies": [
				"build"
			]
		}
	},
	"author": "Valentin Degenne",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/vdegenne/stample"
	},
	"keywords": [
		"templates",
		"placeholders",
		"copy",
		"npm"
	],
	"bin": {
		"stample": "./bin/stample.js",
		"stpl": "./bin/stample.js"
	},
	"devDependencies": {
		"@types/chai": "^4.3.11",
		"@types/mocha": "^10.0.6",
		"chai": "^5.0.0",
		"fast-glob": "^3.3.2",
		"mocha": "^10.2.0",
		"typescript": "^5.3.3",
		"wireit": "^0.14.1"
	},
	"dependencies": {
		"@inquirer/prompts": "^3.3.0"
	},
	"files": [
		"/bin",
		"/lib",
		"!/lib/test"
	]
}
